<div class = "container-fluid">
  <div class = "card w-50 mx-auto" >
    <div class = "card-header c1 text-center text-danger">
      <h1>Edit Paratha</h1>
    </div>
    <div class = "card-body c1">
      <%= form_with(model: @paratha, url: paratha_path(@paratha.id), method: "patch") do |paratha_form| %>
        <div class = "form-group">
          <%= paratha_form.label :name, "Name:", class: "input1" %>
          <%= paratha_form.text_field :name, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= paratha_form.label :price, "Price:", class: "input1" %>
          <%= paratha_form.text_field :price, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= paratha_form.label :category, "Category:", class: "input1" %>
          <%= paratha_form.text_field :category, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= paratha_form.label :description, "Description", class: "input1" %>
          <%= paratha_form.text_area :description, class: "form-control" %>
        </div> 
        <div class = "form-group">
          <%= paratha_form.submit "Update Paratha", class: "button_1_css" %>
        </div>
      <% end %>
      <div class = "outer">
        <%= button_to "Delete Paratha", paratha_path(@paratha.id), method: :delete, class: "button_1_css" %>
      </div>
    </div>
    <div class = "card-footer">
      <%= render partial: "shared/flash" %>
    </div>
  </div>
</div>
