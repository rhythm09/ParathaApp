<div class = "container-fluid">
  <div class = "card w-50 mx-auto" >
    <div class = "card-header c1 text-center text-danger">
      <h1>Sign Up Page</h1>
    </div>
    <div class = "card-body c1">
      <%= form_with model: @user, url: users_path do |user_form| %>
        <div class = "form-group">
          <%= user_form.label :name, "Name:", class: "label" %>
          <%= user_form.text_field :name, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= user_form.label :image, "Profile Photo:", class: "label" %>
          <%= user_form.file_field :image, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= user_form.label :email, "Email:", class: "label" %>
          <%= user_form.email_field :email, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= user_form.label :password, "Password:", class: "label" %>
          <%= user_form.password_field :password, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= user_form.label :password_confirmation, "Confirm Password:", class: "label" %>
          <%= user_form.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= user_form.label :gender, "Gender", class: "label" %>
        </div> 
        <div class = "form-group">
          <%= user_form.radio_button :gender, "male"%>
          <%= user_form.label :male, "Male", class: "label" %>
        </div>
        <div class = "form-group">
          <%= user_form.radio_button :gender, "female"  %>
          <%= user_form.label :female, "Female",class: "label" %>
        </div>
        <div class = "form-group">
          <%= user_form.submit "Sign Up", class: "login_signup_form" %>
        </div>
      <% end %>
    </div>
    <div class = "card-footer">
      <%= render partial: "/shared/errors", locals: { object: @user } %>
    </div>
  </div>
</div>
