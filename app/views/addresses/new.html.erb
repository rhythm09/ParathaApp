<div class = "container-fluid">
  <div class = "card w-50 mx-auto" >
    <div class = "card-header c1 text-center text-danger">
      <h1>Add Address</h1>
    </div>
    <div class = "card-body c1">
      <%= form_with model: @address, url: addresses_path do |address_form| %>
        <div class = "form-group">
          <%= address_form.label :address_line_1, "Address Line 1:", class: "label" %>
          <%= address_form.text_area :address_line_1, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= address_form.label :address_line_2, "Address Line 2:", class: "label" %>
          <%= address_form.text_area :address_line_2, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= address_form.label :city, "City:", class: "label" %>
          <%= address_form.text_field :city, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= address_form.label :state, "State:", class: "label" %>
          <%= address_form.text_field :state, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= address_form.submit "Add Address", class: "login_signup_form" %>
        </div>
      <% end %>
    </div>
    <div class = "card-footer">
      <%= render partial: "/shared/errors", locals: { object: @address } %>
    </div>
  </div>
</div>
