<% @addresses.each do |address| %>
  <div class="w-50 card mx-auto c1 text-center text-danger", id = "delete<%= address.id %>">
    <table class="card-table table">
      <thead>
        <tr>
          <th scope = "col">Address Line 1</th>
          <th scope = "col">Address Line 2</th>
          <th scope = "col">City</th>
          <th scope = "col">State</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= address.address_line_1 %></td>
          <td><%= address.address_line_2 %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
        </tr>
      </tbody>
    </table>
    <div class = "card-footer">
      <%= button_to "Edit Address", edit_address_path(address.id) , method: :get, class: "nav-item btn btn-primary" %>
      <br>
      <%= button_to "Delete Address", address_path(address.id), method: :delete, remote: true, data: { confirm: "Are you sure?" }, class: "nav-item btn btn-primary" %>      
    </div>
  </div>
  <br><br>
<% end %>
